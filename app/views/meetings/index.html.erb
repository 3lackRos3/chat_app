<div class="col-md-6 col-md-offset-3">
  <h1>Your Session list</h1>

<table>
  <thead>
    <tr>
      <th>Caller</th>
      <th>Receiver</th>
      <th>Order</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.caller.name %></td>
        <td><%= meeting.receiver.name %></td>
        <td><%= meeting.order_id %></td>
        <td><%= meeting.duration %></td>
        <td><%= link_to 'Show', meeting, class: "btn btn-info" %></td>
        <% if params[:caller_id] %>
        <td><%= link_to 'Call', call_path(:meeting_id => meeting.id), class: "btn btn-success" %>
          <% elsif params[:receiver_id] %>
            <td><%= link_to 'Call', call_path(:meeting_id => meeting.id, :u => "p"), class: "btn btn-success", :method => :post %></td>
          <% else %>
            <td></td>
        <% end %>
      </tr> 
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path %>
</div>
